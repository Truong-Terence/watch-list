<div class="my-banner">
  <h1>My lists</h1>
</div>

<div class="container my-card-container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class='my-card' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
          <h2><%= link_to list.name, list_path(list), class: "stretched-link"%></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
